<?xml version="1.0"?>
<odoo>
    <record id="biblioteca_miembro_model_actions" model="ir.actions.act_window">
        <field name="name">Miembros</field>
        <field name="res_model">biblioteca.miembro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="miembro_tree" model="ir.ui.view">
        <field name="name">biblioteca.miembro.tree</field>
        <field name="model">biblioteca.miembro</field>
        <field name="arch" type="xml">
            <tree string="Propiedades">
                <field name="name" string="Nombre"/>
                <field name="email" string="Correo electrónico"/>
                <field name="telefono" string="Teléfono"/>
                <field name="targeta" string="Carné préstamo"/>   
            </tree>
        </field>
    </record>

    <record id="miembro_form" model="ir.ui.view">
        <field name="name">biblioteca.miembro.form</field>
        <field name="model">biblioteca.miembro</field>
        <field name="arch" type="xml">
            <form string="Descripciones editables">
                <sheet>
                    <group>
                        <group>
                            <H1>
                                <field name="name" />
                            </H1>
                            <br/>
                            <field name="DNI"/>
                            <field name="email" string="Correo electrónico"/>
                            <field name="telefono" string="Teléfono"/>
                        </group>
                        <group>
                            <field name="targeta" string="Carné préstamo"/> 
                        </group>

                        <notebook>
                            <page string="Prestamos">
                                <field name="prestamo">
                                <tree>
                                    <field name="idEjemplar" string="Título"/>
                                    <field name="idMiembro" string="Miembro"/>
                                    <field name="diasEnPrestamo" string="Días en prestamo"/>
                                    <field name="fechaInicio" string="Inicio"/>   
                                    <field name="fechaFin" string="Fin"/>
                                    <field name="fechaDevolucion" string="Devolución"/>
                                    <field name="estado" string="Estado del prestamo"/>
                                </tree>
                            </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>