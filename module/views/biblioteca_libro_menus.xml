<?xml version="1.0"?>
<odoo>
    <record id="biblioteca_libro_model_actions" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.libro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="libro_tree" model="ir.ui.view">
        <field name="name">Arbol</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <tree string="Propiedades" >
                <field name="name" string="Título"/>
                <field name="type" string="Tipo"/>
                <field name="selling_price" string="Precio"/>
            </tree>
        </field>
    </record>

    <record id="libro_form" model="ir.ui.view">
        <field name="name">Descripción</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <form string="Descripciones">
                <sheet>
                    <group>
                        <H1>
                            <field name="name"/>
                        </H1>
                        <br/>
                        <group>
                            <field name="tags" widget="many2many_tags"/>
                        </group>
                        <br/>
                        <group>
                            <field name="type" />
                            <field name="published_date" string="Fecha de publicación"/>
                        </group>
                             
                        <notebook>
                            <page string="Información">
                                <group>
                                    <field name="ISBN"/>
                                    <field name="description" string="Descripción"/>
                                    <field name="author" string="Autor"/>
                                    <field name="selling_price" string="Precio"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="libro_search" model="ir.ui.view">
        <field name="name">Busqueda</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <search string="Test">
                <field name="name" string="Nombre"/> 
            </search>
        </field>
    </record>
</odoo>
